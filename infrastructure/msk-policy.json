{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "kafka-cluster:Connect",
        "kafka-cluster:DescribeCluster",
        "kafka-cluster:ReadData",
        "kafka-cluster:WriteData",
        "kafka-cluster:DescribeTopic",
        "kafka-cluster:CreateTopic"
      ],
      "Resource": [
        "arn:aws:kafka:us-east-1:YOUR_ACCOUNT_ID:cluster/spring-kafka-msk/*",
        "arn:aws:kafka:us-east-1:YOUR_ACCOUNT_ID:topic/spring-kafka-msk/*",
        "arn:aws:kafka:us-east-1:YOUR_ACCOUNT_ID:group/spring-kafka-msk/*"
      ]
    }
  ]
}